{
  "compilerOptions": {
    "strict": true,
    "lib": ["ES2021", "DOM"],
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "types": ["vite/client"],
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
